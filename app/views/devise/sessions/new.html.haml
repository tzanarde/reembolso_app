.main-center
  = render "devise/shared/error_messages", resource: nil
  
  %h2.text-primary= t("titles.app")

  .container.container-primary.container-center-sm
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "container-form" }) do |f|
      = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t("fields.user.email"), class: "text-field"
      = f.password_field :password, autocomplete: "current-password", placeholder: t("fields.user.password"), class: "text-field"
      = f.submit t("buttons.login"), class: "btn btn-primary btn-full-width", id: 'sign_in'
      .divider-md
      = render "devise/shared/links"
